{
    "watch": ["src"],
    "ext": ".ts, .js",
    "exec": "ts-node ./src/cluster.ts",
    "execMap": {
      "ts": "ts-node --transpileOnly"
    },
    "ts-node": {
      "swc": true
    },
    "verbose": true,
    "ignore": ["node_modules", "dist"],
    "color": true,
    "restartable": "rs",
    "timestamp": "YYYY-MM-DD HH:mm:ss",
    "signal": "SIGINT",
    "restartDelay": 100,
    "eslintConfig": {
      "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"]
      }
    }
  }
  